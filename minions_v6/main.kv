            size_hint: 0.5, 0.5					# Taille de l'image
			keep_ratio: True					# Garde la dimension
			allow_stretch: True					# Permet de l'agrandir
			color: str(SlideRed.value/255),str(SlideGreen.value/255),str(SlideBlue.value/255),1 # couleur de l'image (cercle RGB)
		
		
		
		#****************************************************************************
		#**********************Image Interface***************************************
		#****************************************************************************
		Image:
        	id: fleche1							#Identifiant
