	#******************************************************************
	#******************* Bouton Dropdown ***************************
	#******************************************************************
	Button:
		id: btn								#Identifiant Bouton parametre
		pos_hint: {'x' : 0.01, 'y' : 0.95}	#Position
		on_release: dropdown.open(self)		#Si appuis: ouvrir DropBox
		size_hint: 0.11, 0.04				# Taille
		background_normal: './ImgAnnexe/vide.png'	# rend le fond du bouton vide
	Image:
        source: './ImgAnnexe/parametre.png'	# Source de l'image parametre
        pos_hint: {'x' : 0.01, 'y' : 0.95}  # Position  
        size_hint: 0.04, 0.04				#Taille
		
	Widget:
        on_parent: dropdown.dismiss()		# Widget DropDown au depart fermé
	
	DropDown:	
		id: dropdown							#Identifiant du DropDown				
		
		
		
		#***********************************************************
		#********************** Bouton du DropDown *****************
		#***********************************************************
        Button:
        	id: minions							# Identifiant						
            text: 'Minions'						# Text
			pos_hint: {'x' : 0.01, 'y' : 0.95}	# Position
            size_hint_y: None						# Taille
			height:60
			
			on_release: dropdown.select('')		# Si appui: ferme le dropdown
			on_release: root.minion()			# Si appuis: focntion minion() 
			on_release: root.PosInterface()		# Si appuis: focntion PosInterface() 
			
	
