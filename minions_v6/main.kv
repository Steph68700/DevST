		Image:
        	id: cercleGreen					# Identifiant
			source: './Cercle/cercle.png'	# Source du fichier Image
            pos_hint: {'x': 0.27, 'y': 0.2}	# Position de l'image
            size_hint: 0.3, 0.3				# Taille de l'image
			color: 0,str(SlideGreen.value/255),0,1 # couleur de l'image (cercle vert)
		Image:
        	id: cercleBlue					# Identifiant
