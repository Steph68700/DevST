            pos_hint: {'x': 0.28, 'y': 0.65}	# Position de l'image
            size_hint: 0.1, 0.1					# taille de l'image
			canvas.before:						
				PushMatrix
				Rotate:
					angle:30					# angle de 30°
					origin:self.center			# A partir du centre de l'image
			canvas.after:
				PopMatrix
				
