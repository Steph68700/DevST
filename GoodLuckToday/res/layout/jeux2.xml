<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond2" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="42dp"
        android:text="Carte Noir"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:text="Retournez les cartes, mais attentions a la carte noir !" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="@drawable/titre"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/chance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre chance a ce jeux : " />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="20dp"
        android:text="Jeux 2 :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/a6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/a5"
        android:layout_alignBottom="@+id/a5"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/carte_1" />

    <Button
        android:id="@+id/a5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/a4"
        android:layout_alignBottom="@+id/a4"
        android:layout_alignLeft="@+id/a2"
        android:background="@drawable/carte_1" />

    <Button
        android:id="@+id/a8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/a7"
        android:layout_alignBottom="@+id/a7"
        android:layout_alignLeft="@+id/a5"
        android:background="@drawable/carte_1" />

    <Button
        android:id="@+id/a9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/a8"
        android:layout_alignBottom="@+id/a8"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/carte_1" />

    <Button
        android:id="@+id/a7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/carte_1" />

    <Button
        android:id="@+id/a4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_above="@+id/a7"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/carte_1" />

    <Button
        android:id="@+id/a2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/a1"
        android:layout_alignBottom="@+id/a1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/carte_1" />

    <Button
        android:id="@+id/a1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_above="@+id/a4"
        android:layout_marginBottom="33dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/carte_1"
        android:height="10dp"
        android:minHeight="10dp"
        android:minWidth="20dip" />

    <Button
        android:id="@+id/a3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/a2"
        android:layout_alignBottom="@+id/a2"
        android:layout_alignLeft="@+id/a6"
        android:background="@drawable/carte_1" />

    <TextView
        android:id="@+id/suiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:background="@drawable/suiv1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/trefle"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView1" />

</RelativeLayout>
