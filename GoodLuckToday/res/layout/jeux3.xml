<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.goodlucktoday.menu" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:text="Trouve le Chiffre Secret compris entre 0-9" />

    <Button
        android:id="@+id/envoyer"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/envoyer" />

    <TextView
        android:id="@+id/suiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nbr2"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/suiv1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chance"
        android:layout_centerHorizontal="true"
        android:background="@drawable/titre"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/chance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignParentTop="true"
        android:text="Votre chance a ce jeux : 100 %" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView1"
        android:text="Jeux 3 :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView7"
        android:text="Le Chiffre Secret :"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/a0"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/a2"
        android:layout_below="@+id/a2"
        android:layout_marginTop="18dp"
        android:background="@drawable/rond_0" />

    <Button
        android:id="@+id/a3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/a0"
        android:layout_alignRight="@+id/textView1"
        android:background="@drawable/rond_3" />

    <Button
        android:id="@+id/a4"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/a5"
        android:layout_alignBottom="@+id/a5"
        android:layout_alignLeft="@+id/a1"
        android:background="@drawable/rond_4" />

    <Button
        android:id="@+id/a8"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/a5"
        android:layout_below="@+id/nbr2"
        android:background="@drawable/rond_8" />

    <Button
        android:id="@+id/a1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/a0"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/a2"
        android:background="@drawable/rond_1" />

    <Button
        android:id="@+id/a2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/a5"
        android:layout_below="@+id/a5"
        android:layout_marginTop="18dp"
        android:background="@drawable/rond_2" />

    <Button
        android:id="@+id/a9"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/a5"
        android:layout_toLeftOf="@+id/suiv"
        android:background="@drawable/rond_9" />

    <Button
        android:id="@+id/a6"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/a2"
        android:layout_toLeftOf="@+id/suiv"
        android:background="@drawable/rond_6" />

    <Button
        android:id="@+id/a5"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/envoyer"
        android:layout_below="@+id/a8"
        android:layout_marginTop="18dp"
        android:background="@drawable/rond_5" />

    <Button
        android:id="@+id/a7"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/a5"
        android:layout_alignLeft="@+id/a4"
        android:background="@drawable/rond_7" />

    <EditText
        android:id="@+id/nbr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/envoyer"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="number" >

        <requestFocus />
    </EditText>

</RelativeLayout>
